<?xml version="1.0" encoding="utf-8"?>
<LinearLayout tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/czy_podpowiedz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Czy chcesz zobaczyć podpowiedź?”"
        android:padding="20dp"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="519dp" />

    <Button
        android:id="@+id/show_tip_button"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:background="#FFD8D4"
        android:text="Pokaż odpowiedź"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="547dp" />

    <TextView
        android:id="@+id/podpowiedz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="419dp"
        tools:text="Odpowiedz" />

</LinearLayout>